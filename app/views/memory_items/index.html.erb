<div class="container pt-3">
  <div class="row">
    <div class="col-lg-10 offset-lg-1">
      <!-- 検索フォーム -->
      <form>
        <div class="input-group mb-3"><input class="form-control" placeholder="検索ワード" type="search"/>
          <div class="input-group-append"><input type="submit" value="検索" class="btn btn-primary"/></div>
        </div>
      </form>
    </div>
  </div>
  <!-- アイテム一覧 -->
  <div class="row">
    <div class="col-12">
      <div class="row">
        <% if @memory_items.present? %>
          <%= render @memory_items %>
        <% else %>
          <div class="mb-3">思い出のモノがありません</div>
        <% end %>
      </div>
    </div>
  </div>
</div>